#cron file to manage system upgrades

<%
  unless @date_cron.empty?
  minute = nil
  hour = nil
  day = nil
  month = nil
  if @date_cron.minute == "*"
    minute = "*"
  else
    minute = @date_cron.minute.to_i
  end
  if @date_cron.hour == "*"
    hour = "*"
  else
    hour = @date_cron.hour.to_i
  end
  if @date_cron.day == "*"
    day = "*"
  else
    day = @date_cron.day.to_i
  end
  if @date_cron.month == "*"
    month = "*"
  else
    month = @date_cron.month.to_i
  end
%>

<%= minute %> <%= hour %> <%= day %> <%= month %> * root /usr/bin/auto_updates.sh
<% end %>
<% unless @days_cron.empty? %>
  <% @days_cron.each do |dc| %>
    <% @days_map.each do |k,v| %>
      <% ks = k.to_s %> 
      <% if ks == dc.day %>
<%= dc.minute %> <%= dc.hour %> * * <%= v %> root /usr/bin/auto_updates.sh
      <% end %>
    <% end%>
  <% end %>
<% end %>

