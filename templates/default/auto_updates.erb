<% end %>
#Short-Description: Automatic package upgrades
#Description: Automatic package upgrades from configured repositories
#             Added by GECOS Control Center
### END INIT INFO

NAME=auto_update

# Set path
PATH=/bin:/sbin:/usr/bin:/usr/sbin:/usr/local/bin:/usr/local/sbin
export PATH

set -e

case "$1" in
  start|stop)
        echo -n "Starting $DESC: "
        apt-get update >> <%= @log_file %> 2>> <%= @err_file %>
         apt-get autoclean -y >> <%= @log_file %> 2>> <%= @err_file %>
         DEBCONF_PRIORITY=critical DEBIAN_FRONTEND=noninteractive apt-get dist-upgrade -y --assume-yes --force-yes >> <%= @log_file %> 2>> <%= @err_file %>
        echo "$NAME."
        ;;
  *)
        N=/etc/init.d/$NAME
        echo "Usage: $N {start}" >&2
        exit 1
        ;;
esac

exit 0
